<div class="jumbotron jumbotron-fluid jumbotron-hero" style="height:55vh;">

  <div class="text-center" style="color: white">
    <h2>Welcome on your profile <%= @user.first_name %></h2>
  </div>
</div>
<br>
<div class="container d-flex flex-column align-items-left ">

  <div class="">

    <div class="">

      <%= form_for @user do |f| %>

        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "First Name" %>
        </div><br>

        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "Last Name" %>
        </div><br>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div><br>

        <div class="field">
          <%= f.label :description %><br />
          <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control", placeholder: "Description" %>
        </div><br>

        <div class="actions">
          <%= f.submit "Update", class: "btn"  %>
        </div> <br>
      <% end %>

    </div>

    <hr>

    <div class="">

      <p>Change your profile photo</p>

      <%= form_tag user_profile_pictures_path(@user), multipart: true do %>
        <%= file_field_tag :profile_picture %>
        <%= submit_tag "Update", class:'' %>
      <% end %>

    </div>
  </div>
</div>
