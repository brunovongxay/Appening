<!-- Affichage principal et des tous les gossips-->
<div class="jumbotron jumbotron-fluid jumbotron-hero" style="height:100vh;">
  <div class="masque">

  </div>
</div>

<div class="container" style="margin-top: -500px;">
<% if user_signed_in?  %>
  <div class="banner">
    <h1 style="color: white">Our events</h1>
    <br>
    <!-- Afficher le contenu des events -->
    <div class="card-columns">
      <% @events.each_with_index do |event,index| %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text text-right">Start <%= event.start_date.to_formatted_s(:short) %></p>
            <p class="card-text"> <%= event.description %></p><br>
            <%= link_to "See", event_path(event.id), class: "card-link btn text-right" %>
            <br><br>
            <p class="card-text"><small class="text-muted"> Created since <%= event.created_at.to_formatted_s(:short) %></small></p>
          </div>
        </div>
        <br>
      <% end %>
    </div>
    <%else%>
    <div class="text-center">
      <h1>Welcome to Appening</h1>
      <h6>You won't be often at home.
      </h6>
      <a class="btn" href="<%= new_user_session_path %>" role="button">Log into Your Account</a>
      <p></p>
      <a>Don't have an account ?</a>
      <a data-pa-click="Sign up for free" href="<%= new_user_registration_path %>" style="color: black; margin-left: 4px;">Sign up for free</a>
      <% end %>
      <br>
        <br>
          <br>
    </div>
  </div>
</div>
