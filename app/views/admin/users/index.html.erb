<h1>Liste des utilsateurs</h1>

<% @users.each_with_index do |user,index| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"> id:<%= user.id %> || <%= user.first_name %> <%= user.last_name %></h5>
      <p class="card-text">email : <%= user.email %></p><br>
      <p class="card-text">Descrption: <%= user.description %></p><br>
      <%= link_to "retour", admin_root_path, class: "card-link btn btn-primary text-right" %>
      <br><br>
      <p class="card-text"><small class="text-muted"> Créé le <%= user.created_at.to_formatted_s(:short) %></small></p>
      <p class="card-text"><small class="text-muted"> Modifié le <%= user.updated_at.to_formatted_s(:short) %></small></p>
    </div>
  </div>
  <br>
<% end %>
